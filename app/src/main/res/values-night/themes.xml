<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Material Design 3 Dark Theme with music-themed colors -->
    <style name="Theme.Singventory" parent="Theme.Material3.DayNight">
        <!-- Primary brand color - Musical purple theme -->
        <item name="colorPrimary">@color/musical_purple_light</item>
        <item name="colorOnPrimary">@color/musical_purple_dark</item>
        <item name="colorPrimaryContainer">@color/musical_purple_dark</item>
        <item name="colorOnPrimaryContainer">@color/musical_purple_light</item>
        
        <!-- Secondary brand color - Musical gold accent -->
        <item name="colorSecondary">@color/musical_gold_light</item>
        <item name="colorOnSecondary">@color/musical_gold_dark</item>
        <item name="colorSecondaryContainer">@color/musical_gold_dark</item>
        <item name="colorOnSecondaryContainer">@color/musical_gold_light</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>
        
        <!-- System UI colors for dark theme (edge-to-edge compatible) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Bottom navigation style -->
        <item name="bottomNavigationStyle">@style/Widget.Singventory.BottomNavigationView</item>
    </style>
    
    <!-- Custom Bottom Navigation Style for Dark Theme -->
    <style name="Widget.Singventory.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Singventory.BottomNavigation.Dark</item>
    </style>
    
    <style name="ThemeOverlay.Singventory.BottomNavigation.Dark" parent="">
        <item name="colorPrimary">@color/musical_purple_light</item>
        <item name="colorSurface">@color/surface_dark</item>
    </style>
</resources>