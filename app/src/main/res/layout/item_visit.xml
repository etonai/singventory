<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/venue_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toStartOf="@+id/visit_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="The Singing Swan" />

        <com.google.android.material.chip.Chip
            android:id="@+id/visit_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Visit"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:chipBackgroundColor="@color/active_visit_background"
            app:chipCornerRadius="12dp"
            app:chipMinHeight="24dp"
            app:chipStartPadding="8dp"
            app:chipEndPadding="8dp"
            app:textStartPadding="0dp"
            app:textEndPadding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/visit_date_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/venue_name"
            tools:text="Dec 15, 2024 at 7:30 PM" />

        <!-- Duration display removed as not useful to users
        <TextView
            android:id="@+id/visit_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visit_status"
            tools:text="45 min" />
        -->

        <TextView
            android:id="@+id/performance_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/btn_resume_visit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visit_date_time"
            tools:text="3 performances" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_resume_visit"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:text="Songs"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/primary_button_background"
            app:layout_constraintEnd_toStartOf="@+id/btn_end_visit"
            app:layout_constraintTop_toTopOf="@+id/performance_count" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_end_visit"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="End"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/primary_button_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/performance_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>