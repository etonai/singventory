<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Data Management Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/data_management"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_import_export"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/import_export"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_purge_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/purge_data"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_configuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/configuration"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear Data (Debug)"
                    android:backgroundTint="?attr/colorError"
                    android:textColor="?attr/colorOnError"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Material3.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_migrate_key_adjustments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Migrate 0â†’Unknown Keys (Test)"
                    android:backgroundTint="?attr/colorTertiary"
                    android:textColor="?attr/colorOnTertiary"
                    android:visibility="gone"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Data Overview Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/data_overview"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/songs_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/songs_count_placeholder"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/venues_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/venues_count_placeholder"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/visits_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/visits_count_placeholder"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/performances_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/performances_count_placeholder"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/associations_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Song-Venue Associations: 0"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/visit_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Avg visit frequency: N/A"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- App Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Singventory"
                    android:textAppearance="?attr/textAppearanceHeadlineMedium"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/app_build_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version 0.0.1 (1)"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/app_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PseudonymousEd"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/app_copyright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Copyright 2025 - All rights reserved"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textAlignment="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>